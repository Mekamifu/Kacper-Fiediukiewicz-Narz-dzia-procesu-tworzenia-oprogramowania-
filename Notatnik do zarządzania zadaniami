from datetime import datetime

class Task:
    def __init__(self, description, due_date):
        self.description = description  # Opis zadania
        self.due_date = due_date        # Termin wykonania zadania

    def __str__(self):
        return f"{self.description} - due date: {self.due_date.strftime('%Y-%m-%d')}"

class TaskManager:
    def __init__(self):
        self.tasks = []  # Lista przechowujÄ…ca zadania

    def add_task(self, description, due_date):
        task = Task(description, due_date)
        self.tasks.append(task)
        print("Task added successfully.")

    def remove_task(self, index):
        if 0 <= index < len(self.tasks):
            del self.tasks[index]
            print("Task removed successfully.")
        else:
            print("Invalid task index.")

    def list_tasks(self):
        if self.tasks:
            print("Tasks:")
            for idx, task in enumerate(self.tasks):
                print(f"{idx + 1}. {task}")
        else:
            print("No tasks.")

def parse_date(date_str):
    try:
        date = datetime.strptime(date_str, '%Y-%m-%d')
        return date
    except ValueError:
        print("Invalid date format. Use YYYY-MM-DD.")
        return None

def main():
    manager = TaskManager()

    while True:
        print("\nTask Manager Menu:")
        print("1. Add Task")
        print("2. Remove Task")
        print("3. List Tasks")
        print("4. Exit")

        choice = input("Enter your choice (1-4): ")

        if choice == '1':
            description = input("Enter task description: ")
            due_date_str = input("Enter due date (YYYY-MM-DD): ")
            due_date = parse_date(due_date_str)
            if due_date:
                manager.add_task(description, due_date)
        elif choice == '2':
            index = int(input("Enter task index to remove: ")) - 1
            manager.remove_task(index)
        elif choice == '3':
            manager.list_tasks()
        elif choice == '4':
            print("Exiting program. Goodbye!")
            break
        else:
            print("Invalid choice. Please enter a number between 1 and 4.")

if __name__ == "__main__":
    main()
